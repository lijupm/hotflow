{% extends 'base.html.twig' %}

{% block body %}
    <h1>Patient</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ patient.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ patient.lastName }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ patient.gender }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{% if patient.dob %}{{ patient.dob|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('patients_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('patients_edit', { 'id': patient.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
