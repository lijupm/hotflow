{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title"><b>Session</b></h3>
    </div>
    <div class="panel-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ session.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ session.description }}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{% if session.startTime %}{{ session.startTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endtime</th>
                <td>{% if session.endTime %}{{ session.endTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Patient</th>
                <td>{{ session.patient.firstName }}</td>
            </tr>
            <tr>
                <th>Specialist</th>
                <td>{{ session.specialist.firstName }}</td>
            </tr>
            <tr>
                <th>Anesthetists</th>
                <td>
                    <ul>
                    {% for anesthetist in session.anesthetists %}
                        <li>
                            {{ anesthetist.firstName }}
                        </li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-info" href="{{ path('sessions_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-warning" href="{{ path('sessions_edit', { 'id': session.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
    </div>
{% endblock %}
