{% extends 'base.html.twig' %}

{% block body %}

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title"><b>Check Specialist Availability</b></h3>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.startTime) }}
                    {{ form_widget(form.startTime) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.endTime) }}
                    {{ form_widget(form.endTime) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.specialist) }}
                    {{ form_widget(form.specialist) }}
                </div>
                {{ form_widget(form.submit, {'attr': {'class' : 'btn btn-info'}}) }}
                {{ form_end(form) }}
        </div>
    </div>


{% endblock %}