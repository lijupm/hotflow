{% extends 'base.html.twig' %}

{% block body %}
    <h1>Specialism</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialism.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specialism.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ specialism.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('specialisms_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('specialisms_edit', { 'id': specialism.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
